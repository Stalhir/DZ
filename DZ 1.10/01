#include <iostream>

int main()
{
    setlocale(LC_ALL, "rus");
    int a = 0;
    std::cout << "Введите размер массива: ";
    std::cin >> a;
    int* arr = new int[a];
    for (int i = 0; i < a; i++)
    {
        std::cout << "arr[" << i << "] " << "= ";
        std::cin >> arr[i];
    }
    std::cout << "Введённый массив: ";
    for (int i = 0; i < a; i++)
    {
        std::cout << arr[i] << " ";
    }
}
