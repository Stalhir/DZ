#include <iostream>
#include <Windows.h>

using namespace std;

int main()
{
    cout << "\1";
    setlocale(LC_ALL, "rus");
    SetConsoleCP(1251);
    SetConsoleOutputCP(1251);
    // Рак, Скорпион, Рыбы - Водные
    // Козерог, Телец, Дева - Земля
    char pol = 0;
    int age = 0;
    string znak = "";
    cout << "Введите пол: "; cin >> pol;
    cout << "Введите знак зодиака: "; cin >> znak;
    cout << "Введите возраст: "; cin >> age;
    cout << "Ваше предсказание: " << endl;
    if (pol == 'м'  && age < 40 && (znak == "рак" || znak == "скорпион" || znak == "Рыбы" || znak == "Рак" || znak == "Скорпион" || znak == "Рыбы"))
    {
        cout << "Сегодня очень плодотворный день. Можно добиться того, что прежде казалось почти невозможным." << endl;
    }
    else if (pol == 'ж' && age >= 15 && age <= 30 && (znak == "козерог" || znak == "телец" || znak == "дева" || znak == "Козерог" || znak == "Телец" || znak == "Дева"))
    {
        cout << "Сегодняшний вечер подходит для общения с друзьями, проведения домашних праздников и импровизированных вечеринок. Будет не только весело, но и интересно : найдётся дело, которое увлечёт всех." << endl;

    }else
    {
        cout << "Гороскоп для вас находится в разработке. Приходите чуточку позже ;)" << endl;
    }
      
    return 0;
} 
