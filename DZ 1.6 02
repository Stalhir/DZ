#include <iostream>

using namespace std;

int exponentiation(int value = 1,int power=1)
{
    int result = 1;

    for(int i = 0;i < power;i++)
    {
        result *= value;
    }
    cout << value << " в степени " << power << " = " << result << endl;
    return 0;
}

int main()
{
    setlocale(LC_ALL, "rus");
    exponentiation(5, 2);
    exponentiation(3, 3);
    exponentiation(4, 4);
}
